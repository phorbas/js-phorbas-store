{
  "private": true,
  "dependencies": {
    "mocha": "^7.1.2"
  },
  "devDependencies": {
    "@phorbas/opaque": "file:../../phorbas-opaque",
    "@phorbas/store": "file:.."
  },
  "scripts": {
    "prebuild": "test -d ./node_modules || npm -s install",
    "build": "../node_modules/.bin/rollup --config",
    "clean": "rm ./__unittest.*",
    "watch": "npm -s run build -- --watch",
    "pretest": "npm -s run build",
    "test": "npm -s run test:one",
    "test:one": "NODE_OPTIONS=--enable-source-maps  mocha ./__unittest.node.mjs",
    "test:min": "NODE_OPTIONS=--enable-source-maps  mocha --reporter=min ./__unittest.node.mjs"
  }
}
